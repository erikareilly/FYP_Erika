<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterUser">

   <TextView
       android:id="@+id/textView"
       android:layout_width="206dp"
       android:layout_height="79dp"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true"
       android:layout_alignParentBottom="true"
       android:layout_marginStart="10dp"
       android:layout_marginTop="62dp"
       android:layout_marginEnd="195dp"
       android:layout_marginBottom="589dp"
       android:textColor="@color/black"
       android:text="MyMedical"

       android:textSize="35dp" />

   <EditText
       android:id="@+id/name"
       android:layout_width="wrap_content"
       android:layout_height="61dp"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true"
       android:layout_alignParentBottom="true"
       android:layout_marginStart="100dp"
       android:layout_marginTop="179dp"
       android:layout_marginEnd="100dp"
       android:layout_marginBottom="491dp"
       android:ems="10"
       android:hint="Firstname"
       android:inputType="textPersonName"

       android:text="" />

   <EditText
       android:id="@+id/surname"
       android:layout_width="wrap_content"
       android:layout_height="59dp"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true"
       android:layout_alignParentBottom="true"
       android:layout_marginStart="103dp"
       android:layout_marginTop="254dp"
       android:layout_marginEnd="97dp"
       android:layout_marginBottom="418dp"
       android:ems="10"
       android:hint="Surname"

       android:inputType="textPersonName"
       android:text="" />

   <EditText
       android:id="@+id/email"
       android:layout_width="wrap_content"
       android:layout_height="61dp"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true"
       android:layout_alignParentBottom="true"
       android:layout_marginStart="97dp"
       android:layout_marginTop="332dp"
       android:layout_marginEnd="104dp"
       android:layout_marginBottom="338dp"
       android:ems="10"

       android:hint="Email Address"
       android:inputType="textPersonName"
       android:text="" />

   <EditText
       android:id="@+id/phoneNumber"
       android:layout_width="wrap_content"
       android:layout_height="69dp"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true"
       android:layout_alignParentBottom="true"
       android:layout_marginStart="95dp"
       android:layout_marginTop="407dp"
       android:layout_marginEnd="106dp"
       android:layout_marginBottom="255dp"
       android:ems="10"

       android:hint="Phone Number"
       android:inputType="text"
       android:text="" />

   <ImageView
       android:id="@+id/imageView2"
       android:layout_width="144dp"
       android:layout_height="149dp"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true"
       android:layout_alignParentBottom="true"
       android:layout_marginStart="258dp"
       android:layout_marginTop="14dp"
       android:layout_marginEnd="9dp"
       android:layout_marginBottom="568dp"
       app:srcCompat="@drawable/medical" />

   <Button
       android:id="@+id/button2"
       android:layout_width="wrap_content"
       android:layout_height="81dp"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true"
       android:layout_alignParentBottom="true"
       android:layout_marginStart="143dp"
       android:layout_marginTop="606dp"
       android:layout_marginEnd="133dp"
       android:layout_marginBottom="44dp"
       android:backgroundTint="@color/black"
       android:text="Register" />

   <EditText
       android:id="@+id/pass"
       android:layout_width="wrap_content"
       android:layout_height="60dp"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true"
       android:layout_alignParentBottom="true"
       android:layout_marginStart="94dp"
       android:layout_marginTop="493dp"
       android:layout_marginEnd="107dp"
       android:layout_marginBottom="178dp"
       android:ems="10"
       android:hint="Password"
       android:inputType="textPersonName"
       android:text="" />

</RelativeLayout>